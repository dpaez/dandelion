@media only screen and (max-device-width: 480px)
  body
    padding: 50px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  a
    color: #00B7FF

  p
    color: green

  #draft-preview
    border: solid black 1px
    display: block


  .invisible
    visibility: hidden
    display: none

  .invisible > *
    display: inherit


